{
    "window.menuBarVisibility": "toggle",
    "editor.wordWrap": "wordWrapColumn",

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.meta": true
    },
    "editor.tabCompletion": "on",
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "'SFMono', 'Hasklig', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": false,
    "html.format.wrapLineLength": 100,
    "editor.fontSize": 17,
    "editor.tabSize": 2,
    "editor.rulers": [
        100
    ],
    "editor.cursorStyle": "block",
    "vim.camelCaseMotion.enable": true,
    "vim.normalModeKeyBindings": [
		{
			"before": ["j"],
			"after": ["g","j"]
		},
		{
			"before": ["k"],
			"after": ["g","k"]
        },
        {
            "before":  ["<C-d>"],
            "after": ["g","b"]
        },
        {
            "before": ["<C-j>"],
            "after":  ["<C-e>"],
        },
        {
            "before": ["<C-k>"],
            "after":  ["<C-y>"],
        },
        {
            "before": ["t","k"],
            "after" : ["g","t"]
        },
        {
            "before": ["t","j"],
            "after" : ["g","T"]
        }
    ],
    "vim.visualModeKeyBindings": [
		{
			"before": ["<C-d>"],
			"after": ["g", "b"],
        },
        {
            "before": ["<C-j>"],
            "after":  ["<C-e>"],
        },
        {
            "before": ["<C-k>"],
            "after":  ["<C-y>"],
        },
	],
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": "#0066ff",
    "workbench.colorCustomizations": {
        "statusBar.background": "#0066ff",
        "statusBar.noFolderBackground": "#0066ff",
        "statusBar.debuggingBackground": "#0066ff"
    },
    "vim.useCtrlKeys": true,
    "editor.lineNumbers": "relative",
    "editor.wordWrapColumn": 100,
    "vim.textwidth": 100,
    "editor.codeLens": false,
    "vim.cursorStylePerMode.insert": "line",
    "workbench.colorTheme": "Monokai++",
}